<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <groupId>io.gazetteer</groupId>
  <artifactId>gazetteer</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modelVersion>4.0.0</modelVersion>

  <prerequisites>
    <maven>3.0</maven>
  </prerequisites>

  <organization>
    <name>Gazetteer</name>
    <url>https://www.gazetteer.io/</url>
  </organization>

  <developers>
    <developer>
      <email>bchapuis@gmail.com</email>
      <id>bchapuis</id>
      <name>Bertil Chapuis</name>
    </developer>
  </developers>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>

  <modules>
    <module>gazetteer-osm</module>
    <module>gazetteer-tiles</module>
    <module>gazetteer-benchmarks</module>
    <module>gazetteer-cli</module>
    <module>gazetteer-geoip</module>
    <module>gazetteer-routing</module>
  </modules>

  <profiles>
    <profile>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <properties>
                <excludeTags>none</excludeTags>
              </properties>
            </configuration>
            <groupId>org.apache.maven.plugins</groupId>
          </plugin>
        </plugins>
      </build>
      <id>integration</id>
    </profile>
  </profiles>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.lib.aws-java-sdk-s3>1.11.700</version.lib.aws-java-sdk-s3>
    <version.lib.caffeine>2.8.0</version.lib.caffeine>
    <version.lib.commons-compress>1.19</version.lib.commons-compress>
    <version.lib.dbcp2>2.7.0</version.lib.dbcp2>
    <version.lib.gson>2.8.6</version.lib.gson>
    <version.lib.guava>28.1-jre</version.lib.guava>
    <version.lib.jts>1.16.1</version.lib.jts>
    <version.lib.junit>5.1.0</version.lib.junit>
    <version.lib.lmdb>0.7.0</version.lib.lmdb>
    <version.lib.logback>1.2.3</version.lib.logback>
    <version.lib.osmosis>0.47</version.lib.osmosis>
    <version.lib.picocli>4.1.4</version.lib.picocli>
    <version.lib.postgresql>42.2.9</version.lib.postgresql>
    <version.lib.proj4j>1.1.0</version.lib.proj4j>
    <version.lib.selenium>3.141.59</version.lib.selenium>
    <version.lib.slf4j>1.7.25</version.lib.slf4j>
    <version.lib.snakeyaml>1.25</version.lib.snakeyaml>
    <version.lib.sqlite>3.30.1</version.lib.sqlite>
    <version.lib.testng>6.13.1</version.lib.testng>
    <version.plugin.compiler>3.8.0</version.plugin.compiler>
    <version.plugin.surefire>2.19.1</version.plugin.surefire>
    <version.plugin.surefire.provider.junit>1.0.3</version.plugin.surefire.provider.junit>
  </properties>



  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-clean-plugin</artifactId>
          <version>2.5</version>
        </plugin>
        <plugin>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>2.8.1</version>
        </plugin>
        <plugin>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.5.1</version>
        </plugin>
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.4</version>
        </plugin>
        <plugin>
          <artifactId>maven-javadoc-plugin</artifactId>
          <version>2.9.1</version>
        </plugin>
        <plugin>
          <artifactId>maven-resources-plugin</artifactId>
          <version>2.6</version>
        </plugin>
        <plugin>
          <artifactId>maven-site-plugin</artifactId>
          <version>3.3</version>
        </plugin>
        <plugin>
          <artifactId>maven-source-plugin</artifactId>
          <version>2.2.1</version>
        </plugin>
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.17</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${version.plugin.compiler}</version>
      </plugin>
      <plugin>
        <artifactId>jacoco-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <goals>
              <goal>report</goal>
            </goals>
            <id>report</id>
            <phase>test</phase>
          </execution>
        </executions>
        <groupId>org.jacoco</groupId>
        <version>0.8.2</version>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*.class</include>
          </includes>
          <properties>
            <excludeTags>integration</excludeTags>
          </properties>
          <reuseForks>true</reuseForks>
          <useSystemClassLoader>false</useSystemClassLoader>
        </configuration>
        <dependencies>
          <dependency>
            <artifactId>junit-platform-surefire-provider</artifactId>
            <groupId>org.junit.platform</groupId>
            <version>${version.plugin.surefire.provider.junit}</version>
          </dependency>
          <dependency>
            <artifactId>junit-jupiter-engine</artifactId>
            <groupId>org.junit.jupiter</groupId>
            <version>${version.lib.junit}</version>
          </dependency>
        </dependencies>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${version.plugin.surefire}</version>
      </plugin>
    </plugins>
  </build>

  <dependencyManagement>
    <dependencies>
      <!-- Internal dependencies -->
      <dependency>
        <artifactId>gazetteer-benchmarks</artifactId>
        <groupId>io.gazetteer</groupId>
        <version>${project.parent.version}</version>
      </dependency>
      <dependency>
        <artifactId>gazetteer-cli</artifactId>
        <groupId>io.gazetteer</groupId>
        <version>${project.parent.version}</version>
      </dependency>
      <dependency>
        <artifactId>gazetteer-osm</artifactId>
        <groupId>io.gazetteer</groupId>
        <version>${project.parent.version}</version>
      </dependency>
      <dependency>
        <artifactId>gazetteer-tiles</artifactId>
        <groupId>io.gazetteer</groupId>
        <version>${project.parent.version}</version>
      </dependency>

      <!-- External dependencies -->
      <dependency>
        <artifactId>guava</artifactId>
        <groupId>com.google.guava</groupId>
        <version>${version.lib.guava}</version>
      </dependency>
      <dependency>
        <artifactId>picocli</artifactId>
        <groupId>info.picocli</groupId>
        <version>${version.lib.picocli}</version>
      </dependency>
      <dependency>
        <artifactId>caffeine</artifactId>
        <groupId>com.github.ben-manes.caffeine</groupId>
        <version>${version.lib.caffeine}</version>
      </dependency>
      <dependency>
        <artifactId>sqlite-jdbc</artifactId>
        <groupId>org.xerial</groupId>
        <version>${version.lib.sqlite}</version>
      </dependency>
      <dependency>
        <artifactId>postgresql</artifactId>
        <groupId>org.postgresql</groupId>
        <version>${version.lib.postgresql}</version>
      </dependency>
      <dependency>
        <artifactId>commons-dbcp2</artifactId>
        <groupId>org.apache.commons</groupId>
        <version>${version.lib.dbcp2}</version>
      </dependency>
      <dependency>
        <artifactId>jts-core</artifactId>
        <groupId>org.locationtech.jts</groupId>
        <version>${version.lib.jts}</version>
      </dependency>
      <dependency>
        <artifactId>proj4j</artifactId>
        <groupId>org.locationtech.proj4j</groupId>
        <version>${version.lib.proj4j}</version>
      </dependency>
      <dependency>
        <artifactId>jts-io-common</artifactId>
        <groupId>org.locationtech.jts.io</groupId>
        <version>${version.lib.jts}</version>
      </dependency>
      <dependency>
        <artifactId>logback-core</artifactId>
        <groupId>ch.qos.logback</groupId>
        <version>${version.lib.logback}</version>
      </dependency>
      <dependency>
        <artifactId>logback-classic</artifactId>
        <groupId>ch.qos.logback</groupId>
        <version>${version.lib.logback}</version>
      </dependency>
      <dependency>
        <artifactId>slf4j-api</artifactId>
        <groupId>org.slf4j</groupId>
        <version>${version.lib.slf4j}</version>
      </dependency>
      <dependency>
        <artifactId>lmdbjava</artifactId>
        <groupId>org.lmdbjava</groupId>
        <version>${version.lib.lmdb}</version>
      </dependency>
      <dependency>
        <artifactId>snakeyaml</artifactId>
        <groupId>org.yaml</groupId>
        <version>${version.lib.snakeyaml}</version>
      </dependency>
      <dependency>
        <artifactId>osmosis-osm-binary</artifactId>
        <groupId>org.openstreetmap.osmosis</groupId>
        <version>${version.lib.osmosis}</version>
      </dependency>
      <dependency>
        <artifactId>commons-compress</artifactId>
        <groupId>org.apache.commons</groupId>
        <version>${version.lib.commons-compress}</version>
      </dependency>
      <dependency>
        <artifactId>aws-java-sdk-s3</artifactId>
        <groupId>com.amazonaws</groupId>
        <version>${version.lib.aws-java-sdk-s3}</version>
      </dependency>


      <!-- Testing libraries -->
      <dependency>
        <artifactId>junit-jupiter-api</artifactId>
        <groupId>org.junit.jupiter</groupId>
        <scope>test</scope>
        <version>${version.lib.junit}</version>
      </dependency>
      <dependency>
        <artifactId>junit-jupiter-params</artifactId>
        <groupId>org.junit.jupiter</groupId>
        <scope>test</scope>
        <version>${version.lib.junit}</version>
      </dependency>
      <dependency>
        <artifactId>junit-jupiter-engine</artifactId>
        <groupId>org.junit.jupiter</groupId>
        <scope>test</scope>
        <version>${version.lib.junit}</version>
      </dependency>
      <dependency>
        <artifactId>selenium-java</artifactId>
        <groupId>org.seleniumhq.selenium</groupId>
        <scope>test</scope>
        <version>${version.lib.selenium}</version>
      </dependency>
      <dependency>
        <artifactId>selenium-server</artifactId>
        <groupId>org.seleniumhq.selenium</groupId>
        <scope>test</scope>
        <version>${version.lib.selenium}</version>
      </dependency>
      <dependency>
        <artifactId>selenium-chrome-driver</artifactId>
        <groupId>org.seleniumhq.selenium</groupId>
        <scope>test</scope>
        <version>${version.lib.selenium}</version>
      </dependency>
      <dependency>
        <artifactId>testng</artifactId>
        <groupId>org.testng</groupId>
        <scope>test</scope>
        <version>${version.lib.testng}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
